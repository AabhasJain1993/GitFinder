<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/circular_background"
    android:paddingTop="30dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="30dp"
        android:id="@+id/repo_image" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="6dp"
        android:layout_toRightOf="@+id/repo_image"
        android:id="@+id/nameContainer">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name : "
            android:textSize="16sp"
            android:textColor="#000000"
            android:id="@+id/nameKey"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/nameKey"
            android:textSize="16sp"
            android:textColor="#000000"
            android:id="@+id/nameValue" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="6dp"
        android:layout_toRightOf="@+id/repo_image"
        android:layout_below="@id/nameContainer"
        android:id="@+id/fullnameContainer">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name : "
            android:id="@+id/fullnameKey"
            android:textSize="16sp"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/fullnameKey"
            android:id="@+id/fullnameValue"
            android:textSize="16sp"
            android:textColor="#000000"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="6dp"
        android:layout_toRightOf="@+id/repo_image"
        android:layout_below="@id/fullnameContainer"
        android:id="@+id/watchCountContainer">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Watcher Count : "
            android:textSize="16sp"
            android:textColor="#000000"
            android:id="@+id/watchCountkey"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/watchCountkey"
            android:textSize="16sp"
            android:textColor="#000000"
            android:id="@+id/watchCountValue" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="6dp"
        android:layout_toRightOf="@+id/repo_image"
        android:layout_below="@id/watchCountContainer"
        android:id="@+id/commitcountContainer">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Commit Count : "
            android:id="@+id/commitcountkey"
            android:textSize="16sp"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/commitcountkey"
            android:id="@+id/commitcountValue"
            android:textSize="16sp"
            android:textColor="#000000"/>

    </RelativeLayout>

</RelativeLayout>